datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  groups    UserGroup[]
}

model Group {
  id        Int        @id @default(autoincrement())
  name      String
  users     UserGroup[]
  posts     Post[]
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  group     Group    @relation(fields: [groupId], references: [id])
  groupId   Int
}

model UserGroup {
  user   User  @relation(fields: [userId], references: [id])
  userId Int
  group  Group @relation(fields: [groupId], references: [id])
  groupId Int
  @@id([userId, groupId])
}

